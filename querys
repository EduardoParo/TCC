create table sys_usr(
    usr_id int not null primary key AUTO_INCREMENT,
    usr_nome varchar(100) not null,
    usr_email varchar(150) not null,
	usr_senha varchar(32) not null
);

create table ideia(
    ideia_id 			int not null PRIMARY KEY AUTO_INCREMENT,
    ideia_id_usr			int not null,
	ideia_titulo 		char(250),
	ideia_assunto 		char(250),
	ideia_descricao		char(255),	
	ideia_data 		date,
	data datetime default current_timestamp
);
	
INSERT INTO ideia
    (ideia_data, ideia_titulo, ideia_assunto,ideia_descricao, ideia_id_usr) 
 VALUES 
 ('01-01-1977','ideia1','ola mundo','ola mundo','1') 


